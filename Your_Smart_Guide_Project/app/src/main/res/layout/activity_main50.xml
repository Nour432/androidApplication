<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/draw2">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#b3a5d5"
        android:id="@+id/toolbar"
        android:layout_marginTop="0dp"
        >

        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/universitylogo"
                android:layout_marginLeft="-20dp"

                ></ImageView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="130dp"
                android:src="@drawable/facultylogo"

                ></ImageView>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>




    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/t1"
        android:layout_marginTop="20dp"
        android:columnCount="1"
        android:rowCount="2"
        android:layout_margin="20dp"
        >

        <androidx.cardview.widget.CardView
            android:foreground="@drawable/effect"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            app:cardCornerRadius="150dp"
            app:cardElevation="8dp"
            android:layout_gravity="fill"
            app:cardUseCompatPadding="true"
            android:id="@+id/card1"
            app:cardBackgroundColor="@color/white">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/stude"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                ></TextView>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:foreground="@drawable/effect"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            app:cardCornerRadius="150dp"
            app:cardElevation="8dp"
            android:layout_gravity="fill"
            app:cardUseCompatPadding="true"
            android:id="@+id/card2"
            app:cardBackgroundColor="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/advisor"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                ></TextView>
        </androidx.cardview.widget.CardView>
    </GridLayout>
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#b3a5d5"
        android:id="@+id/toolbar2"
        android:layout_marginTop="740dp"
        >
        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:src="@drawable/home"
                android:layout_marginLeft="-20dp"
                android:clickable="true"
                android:foreground="@drawable/effect"
                android:id="@+id/home"
                ></ImageView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginLeft="25dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/user"
                android:layout_marginBottom="-1dp"
                android:foreground="@drawable/effect"
                android:clickable="true"
                android:id="@+id/person"
                ></ImageView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginLeft="25dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/mailphone"
                android:layout_marginBottom="-5dp"
                android:foreground="@drawable/effect"
                android:clickable="true"
                android:id="@+id/contact"
                ></ImageView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginLeft="25dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            >
            <ImageView

                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/baseline_translate_24"
                android:layout_marginBottom="-3dp"
                android:foreground="@drawable/effect"
                android:clickable="true"
                android:id="@+id/translate"

                ></ImageView>

            <Spinner
                android:layout_width="300dp"
                android:layout_marginTop="10dp"
                android:id="@+id/spinner1"
                android:layout_height="90dp"
                >
            </Spinner>

        </RelativeLayout>



    </androidx.appcompat.widget.Toolbar>


</RelativeLayout>