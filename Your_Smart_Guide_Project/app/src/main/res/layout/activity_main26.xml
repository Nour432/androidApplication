<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity17"
    android:orientation="vertical"
    >
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#b3a5d5"
        android:id="@+id/toolbar"
        android:layout_marginTop="0dp"
        >

        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/universitylogo"
                android:layout_marginLeft="-20dp"

                ></ImageView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="130dp"
                android:src="@drawable/facultylogo"

                ></ImageView>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://s...content-available-to-author-only...d.com/apk/res-auto"
        android:background="@drawable/draw2" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="30dp"
                android:textSize="25sp"
                android:textColor="#46456e"
                android:text="Courses You Registered  ">

            </TextView>



            <ListView
                android:layout_marginTop="20dp"
                android:layout_width="200dp"
                android:layout_height="280dp"
                android:id="@+id/list"
                android:layout_marginLeft="30dp"
                ></ListView>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/modify"
                android:text="Modify"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"

                ></Button>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:layout_marginLeft="40dp"
                android:textSize="15sp"
                android:textColor="#46456e"
                android:text="To Confirm Register Enter your National ID">

            </TextView>

            <EditText
                android:layout_marginLeft="20dp"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:id="@+id/username"
                android:background="@drawable/edittextback"
                android:drawableLeft="@drawable/baseline_person_24"
                android:drawablePadding="8dp"
                android:hint="National ID"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="20dp"
                android:inputType="text"

                />

            <Button
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/confirm"
                android:text="confirm register"
                android:layout_gravity="center"

                ></Button>





        </LinearLayout>

    </ScrollView>
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#b3a5d5"
        android:id="@+id/toolbar2"
        android:layout_marginTop="-55dp"
        >
        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:src="@drawable/home"
                android:layout_marginLeft="-20dp"
                android:clickable="true"
                android:foreground="@drawable/effect"
                android:id="@+id/home"
                ></ImageView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginLeft="25dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/user"
                android:layout_marginBottom="-1dp"
                android:foreground="@drawable/effect"
                android:clickable="true"
                android:id="@+id/person"
                ></ImageView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginLeft="25dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/mailphone"
                android:layout_marginBottom="-5dp"
                android:foreground="@drawable/effect"
                android:clickable="true"
                android:id="@id/contact"
                ></ImageView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginLeft="25dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            >
            <ImageView

                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/baseline_translate_24"
                android:layout_marginBottom="-3dp"
                android:foreground="@drawable/effect"
                android:clickable="true"
                android:id="@+id/translate"

                ></ImageView>

            <Spinner
                android:layout_width="300dp"
                android:layout_marginTop="10dp"
                android:id="@+id/spinner1"
                android:layout_height="90dp"
                >
            </Spinner>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

</LinearLayout>


