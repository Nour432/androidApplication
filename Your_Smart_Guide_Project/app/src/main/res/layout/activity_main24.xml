<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/draw2"
    >
  <androidx.appcompat.widget.Toolbar
      android:layout_width="match_parent"
      android:layout_height="?attr/actionBarSize"
      android:background="#b3a5d5"
      android:id="@+id/toolbar"
      android:layout_marginTop="0dp"
      >

    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        >
      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/universitylogo"
          android:layout_marginLeft="-20dp"

          ></ImageView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        >
      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="130dp"
          android:src="@drawable/facultylogo"

          ></ImageView>
    </RelativeLayout>
  </androidx.appcompat.widget.Toolbar>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="140dp"
      android:layout_marginLeft="40dp"
      android:layout_marginRight="40dp"
      android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        ></TextView>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/phone"
        android:inputType="phone"
        android:background="@drawable/edittextback"
        android:drawableLeft="@drawable/baseline_smartphone_24"
        android:drawablePadding="8dp"
        android:hint="Phone"
        android:padding="8dp"
        android:textColor="@color/black"
        android:textColorHighlight="@color/cardview_dark_background"
        android:layout_marginTop="20dp"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:id="@+id/sendcode"
        android:text="Send Code"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/purple_200"
        app:cornerRadius = "20dp"
        android:textAllCaps="false"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/code"
        android:inputType="phone"
        android:background="@drawable/edittextback"
        android:drawableLeft="@drawable/baseline_sms_24"
        android:drawablePadding="8dp"
        android:hint="Code"
        android:padding="8dp"
        android:textColor="@color/black"
        android:textColorHighlight="@color/cardview_dark_background"
        android:layout_marginTop="20dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/pass"
        android:inputType="textPassword"
        android:background="@drawable/edittextback"
        android:drawableLeft="@drawable/baseline_lock_24"
        android:drawablePadding="8dp"
        android:hint="New pssword"
        android:padding="8dp"
        android:textColor="@color/black"
        android:textColorHighlight="@color/cardview_dark_background"
        android:layout_marginTop="20dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/login"
        android:text="Login"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/purple_200"
        app:cornerRadius = "20dp"/>
  </LinearLayout>

  <androidx.appcompat.widget.Toolbar
      android:layout_width="match_parent"
      android:layout_height="?attr/actionBarSize"
      android:background="#b3a5d5"
      android:id="@+id/toolbar2"
      android:layout_marginTop="740dp"
      >
    <RelativeLayout
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        >
      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="35dp"
          android:src="@drawable/home"
          android:layout_marginLeft="-20dp"
          android:clickable="true"
          android:foreground="@drawable/effect"
          android:id="@+id/home"
          ></ImageView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginLeft="25dp"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        >
      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="35dp"
          android:layout_marginLeft="5dp"
          android:src="@drawable/user"
          android:layout_marginBottom="-1dp"
          android:foreground="@drawable/effect"
          android:clickable="true"
          android:id="@+id/person"
          ></ImageView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginLeft="25dp"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        >
      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="35dp"
          android:layout_marginLeft="5dp"
          android:src="@drawable/mailphone"
          android:layout_marginBottom="-5dp"
          android:foreground="@drawable/effect"
          android:clickable="true"
          android:id="@id/contact"
          ></ImageView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginLeft="25dp"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        >
      <ImageView

          android:layout_width="40dp"
          android:layout_height="50dp"
          android:layout_marginLeft="5dp"
          android:src="@drawable/baseline_translate_24"
          android:layout_marginBottom="-3dp"
          android:foreground="@drawable/effect"
          android:clickable="true"
          android:id="@+id/translate"

          ></ImageView>
      <Spinner
          android:layout_width="300dp"
          android:layout_marginTop="10dp"
          android:id="@+id/spinner1"
          android:layout_height="90dp"
          >

      </Spinner>
    </RelativeLayout>
  </androidx.appcompat.widget.Toolbar>
</RelativeLayout>
