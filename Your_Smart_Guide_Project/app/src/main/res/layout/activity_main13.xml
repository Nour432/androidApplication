<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/draw2"

    >
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#b3a5d5"
        android:id="@+id/toolbar"
        android:layout_marginTop="0dp"
        >

        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/universitylogo"
                android:layout_marginLeft="-20dp"

                ></ImageView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="130dp"
                android:src="@drawable/facultylogo"

                ></ImageView>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">


        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="-2dp">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100dp"
                        android:layout_marginTop="15dp"
                        android:text="Letter Grade"
                        android:textColor="@color/move"
                        android:textSize="25sp" />


                    <TextView
                        android:id="@+id/credit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="15dp"
                        android:text="Credit "
                        android:textColor="@color/move"
                        android:textSize="25sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt1"
                        android:layout_width="wrap_content"
                        android:layout_height="43dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="35dp"
                        android:text="Course 1"
                        android:textColor="@color/move"
                        android:textSize="20sp" />


                    <Spinner
                        android:id="@+id/spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="35dp"
                        android:layout_marginBottom="16dp"
                        android:background="@android:drawable/btn_dropdown"
                        android:contentDescription="@android:string/selectTextMode" />

                    <Spinner
                        android:id="@+id/credit1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="90dp"
                        android:layout_marginTop="35dp"
                        android:layout_marginBottom="16dp"
                        android:background="@android:drawable/btn_dropdown"
                        android:contentDescription="@android:string/selectTextMode" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="35dp"


                        android:text="Course 2"
                        android:textColor="@color/move"
                        android:textSize="20sp" />


                    <Spinner
                        android:id="@+id/spinner2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="35dp"
                        android:layout_marginBottom="16dp"
                        android:background="@android:drawable/btn_dropdown"
                        android:contentDescription="@android:string/selectTextMode" />

                    <Spinner
                        android:id="@+id/credit2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="90dp"
                        android:layout_marginTop="35dp"
                        android:layout_marginBottom="16dp"
                        android:background="@android:drawable/btn_dropdown"
                        android:contentDescription="@android:string/selectTextMode" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt3"
                        android:layout_width="wrap_content"
                        android:layout_height="42dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="35dp"

                        android:text="Course 3"
                        android:textColor="@color/move"
                        android:textSize="20sp" />


                    <Spinner
                        android:id="@+id/spinner3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="35dp"
                        android:layout_marginBottom="16dp"
                        android:background="@android:drawable/btn_dropdown"
                        android:contentDescription="@android:string/selectTextMode"


                        />

                    <Spinner
                        android:id="@+id/credit3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="90dp"
                        android:layout_marginTop="35dp"
                        android:layout_marginBottom="16dp"
                        android:background="@android:drawable/btn_dropdown"
                        android:contentDescription="@android:string/selectTextMode" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt4"
                        android:layout_width="wrap_content"
                        android:layout_height="46dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="35dp"
                        android:text="Course 4"
                        android:textColor="@color/move"
                        android:textSize="20sp" />


                    <Spinner
                        android:id="@+id/spinner4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="35dp"
                        android:layout_marginBottom="16dp"
                        android:background="@android:drawable/btn_dropdown"
                        android:contentDescription="@android:string/selectTextMode"


                        />

                    <Spinner
                        android:id="@+id/credit4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="90dp"
                        android:layout_marginTop="35dp"
                        android:layout_marginBottom="16dp"
                        android:background="@android:drawable/btn_dropdown"
                        android:contentDescription="@android:string/selectTextMode" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt5"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="35dp"

                        android:text="Course 5"
                        android:textColor="@color/move"
                        android:textSize="20sp" />

                    <Spinner
                        android:id="@+id/spinner5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="35dp"
                        android:layout_marginBottom="16dp"
                        android:background="@android:drawable/btn_dropdown"
                        android:contentDescription="@android:string/selectTextMode" />

                    <Spinner
                        android:id="@+id/credit5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="90dp"
                        android:layout_marginTop="35dp"
                        android:layout_marginBottom="16dp"
                        android:background="@android:drawable/btn_dropdown"
                        android:contentDescription="@android:string/selectTextMode" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt6"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="35dp"
                        android:text="Course 6"
                        android:textColor="@color/move"
                        android:textSize="20sp" />


                    <Spinner
                        android:id="@+id/spinner6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="35dp"
                        android:layout_marginBottom="16dp"
                        android:background="@android:drawable/btn_dropdown"
                        android:contentDescription="@android:string/selectTextMode" />

                    <Spinner
                        android:id="@+id/credit6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="90dp"
                        android:layout_marginTop="35dp"
                        android:layout_marginBottom="16dp"
                        android:background="@android:drawable/btn_dropdown"
                        android:contentDescription="@android:string/selectTextMode" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt7"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="35dp"
                        android:text="Course 7"
                        android:textColor="@color/move"
                        android:textSize="20sp" />


                    <Spinner
                        android:id="@+id/spinner7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="35dp"
                        android:layout_marginBottom="16dp"
                        android:background="@android:drawable/btn_dropdown"
                        android:contentDescription="@android:string/selectTextMode" />

                    <Spinner
                        android:id="@+id/credit7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="90dp"
                        android:layout_marginTop="35dp"
                        android:layout_marginBottom="16dp"
                        android:background="@android:drawable/btn_dropdown"
                        android:contentDescription="@android:string/selectTextMode" />
                </LinearLayout>


                <TextView
                    android:id="@+id/T"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="190dp"
                    android:layout_marginTop="30dp" />

                <Button
                    android:id="@+id/button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="150dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="35dp"
                    android:layout_marginBottom="70dp"
                    android:backgroundTint="#A351B1"
                    android:fontFamily="sans-serif"
                    android:text="Calculate GPA"
                    android:textSize="15sp"

                    />
            </LinearLayout>
        </HorizontalScrollView>
    </ScrollView>

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#b3a5d5"
        android:id="@+id/toolbar2"
        android:layout_marginTop="-55dp"
        >
        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:src="@drawable/home"
                android:layout_marginLeft="-20dp"
                android:clickable="true"
                android:foreground="@drawable/effect"
                android:id="@+id/home"
                ></ImageView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginLeft="25dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/user"
                android:layout_marginBottom="-1dp"
                android:foreground="@drawable/effect"
                android:clickable="true"
                android:id="@+id/person"
                ></ImageView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginLeft="25dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/mailphone"
                android:layout_marginBottom="-5dp"
                android:foreground="@drawable/effect"
                android:clickable="true"
                android:id="@id/contact"
                ></ImageView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginLeft="25dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            >
            <ImageView

                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/baseline_translate_24"
                android:layout_marginBottom="-3dp"
                android:foreground="@drawable/effect"
                android:clickable="true"
                android:id="@+id/translate"

                ></ImageView>
            <Spinner
                android:layout_width="300dp"
                android:layout_marginTop="10dp"
                android:id="@+id/spinner1"
                android:layout_height="90dp"
                >

            </Spinner>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

</LinearLayout>